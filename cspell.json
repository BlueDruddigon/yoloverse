{
  "version": "0.2",
  "language": "en-GB",
  "dictionaries": ["master"],
  "dictionaryDefinitions": [
    {
      "name": "master",
      "path": "https://raw.githubusercontent.com/bluedruddigon/spell-checker/main/spell-checker.txt"
    }
  ],
  "ignorePaths": ["node_modules/**", "__pycache__/**"],
  "patterns": [
    {
      "name": "comment-single-line",
      "pattern": "/# .*/g"
    },
    {
      "name": "documents",
      "pattern": "/\"\"\"(.|\\n)*?\"\"\"/g"
    }
  ],
  "includeRegExpList": ["comment-single-line", "documents"]
}
